# Check your java version first
java -version

# Add java repository
sudo add-apt-repository ppa:webupd8team/java
sudo apt-get update
sudo apt-get install oracle-java8-installer

# Add Neo4J to repository
sudo wget -O - http://debian.neo4j.org/neotechnology.gpg.key | sudo apt-key add -

# If not working, paste the code without sudo
sudo su -c "echo 'deb http://www.duinsoft.nl/pkg debs all' >> /etc/apt/sources.list"

# Update the packages
sudo apt-get update

# Install Neo4J
sudo apt-get install neo4j

# Check the service status
service neo4j status
