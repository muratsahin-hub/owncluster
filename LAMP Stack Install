# Install Apache
sudo apt-get install apache2

# Install MySQL
sudo apt-get install mysql-server

# Install PHP
sudo apt-get install php7.2-cli

# Restart the Apache server to load php modules
sudo /etc/init.d/apache2 restart

# Install phpMyAdmin on Ubuntu 
sudo apt-get install phpmyadmin

# Choose apache2 in the dialog box
# Click "yes" to db-common

# Get to the MySQL
sudo mysql

# Change the user password
ALTER USER 'root'@'localhost' IDENTIFIED WITH mysql_native_password BY '**your pwd**';
FLUSH PRIVILEGES;

# Create new user with all privileges
GRANT ALL PRIVILEGES ON *.* TO 'administrator'@'localhost' IDENTIFIED BY '** your pwd**';

# Quit Mysql
quit

# You're done!
